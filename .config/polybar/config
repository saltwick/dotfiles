[bar/bar]
;monitor = ${env:MONITOR:HDMI-1}
width =100%
height =  25 
;offset-x = 2%
;offset-y = 14%
fixed-center = true
#override-redirect = true

#border-left-size = ${sizes.bar-offset-x}
#border-top-size = ${sizes.bar-top-gap}

