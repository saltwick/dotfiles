[module/spotify]
type = custom/script
exec = ~/.config/polybar/polybar-spotify.sh
interval = 5
format-underline = #1ED760

[module/weather]
type = custom/script
exec =~/.config/polybar/weather.py
interval = 1800
tail = true
format-underline =  #87CEEB

[module/graphics]
type = custom/script
exec = ~/.config/polybar/graphics.sh
interval = 5
format = <label>
format-prefix-foreground = #928374
label = "%output%"
format-prefix = " "

[module/bluetooth]
type = custom/script
exec =~/.config/polybar/bluetooth.sh
